<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <com.gjiazhe.scrollparallaximageview.ScrollParallaxImageView
        android:id="@+id/item_nature_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:transitionName="@string/shared_element_transition_name"
        tools:src="@drawable/nature_005"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

      <View
          android:id="@+id/element_view1"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/background_title_element"
          />

      <View
          android:id="@+id/element_view2"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="16dp"
          android:background="@drawable/background_text_element"
          />

      <View
          android:id="@+id/element_view3"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="64dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/background_text_element"
          />

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
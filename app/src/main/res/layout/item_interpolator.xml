<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >
  <LinearLayout
      android:id="@+id/item_interpolator_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/item_interpolator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tools:text="Linear Interpolator"
        style="@style/TextViewThin"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/item_interpolator_animated_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#69F0AE"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        >

    </android.support.v7.widget.CardView>
  </LinearLayout>
</android.support.v7.widget.CardView>